{
  "name": "Test",
  "version": "0.0.1",
  "description": "Test",
  "license": "MIT",
  "readmeFilename": "README.md",
  "author": {
    "name": "Ali"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.11.1",
    "@types/jest": "^24.0.25",
    "@types/node": "^9.6.5",
    "Faker": "^0.7.2",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "mongoose": "^5.8.6",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.0",
    "supertest": "3.0.0",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@types/supertest": "2.0.2",
    "body-parser": "^1.18.2",
    "express": "^4.17.3",
    "ts-node": "^8.6.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts --watch src",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "server"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.spec.(ts|js)"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**",
      "!**/webpack.config.js"
    ]
  }
}
